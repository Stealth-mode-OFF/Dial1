{
  "manifest_version": 3,
  "name": "Echo Dialer Meet Coach",
  "version": "1.1.0",
  "description": "Forward Google Meet captions into Dial1 Meet Coach (no secrets in extension).",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://localhost:5173/*",
    "http://127.0.0.1:5173/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*",
    "https://dial1.vercel.app/*"
  ],
  "optional_host_permissions": [
    "https://*.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["meet_content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:5173/*",
        "http://127.0.0.1:5173/*",
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*",
        "https://dial1.vercel.app/*"
      ],
      "js": ["dial1_bridge.js"],
      "run_at": "document_start"
    }
  ]
}
