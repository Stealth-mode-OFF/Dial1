# Frontend Supabase credentials (prefixed with VITE_ so Vite exposes them)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=public-anon-key

# Backend Supabase secrets (used by the Edge Function and scripts)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_ANON_KEY=anonymous-or-service-key

# Third-party APIs (never expose these in the browser)
OPENAI_API_KEY=sk-xxxxx
PIPEDRIVE_API_KEY=your-pipedrive-secret
TLDV_API_KEY=your-tldv-api-key

# Optional CORS control for the Edge Function (comma separated origins)
ECHO_ALLOWED_ORIGINS=https://your-site.com,http://localhost:5173
